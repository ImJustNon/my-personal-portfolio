<main class="mt-2" >
    <div id="intro" class="p-5 text-center bg-transparent">
        <h1 class="mb-3 h2">กิจกรรม</h1>
    </div>

    <br>
    <br>

    <!----------------------------------------- Slide Image ---------------------------------------------------->
    <div id="introCarousel" class="carousel slide carousel-fade shadow-2-strong" data-mdb-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-mdb-target="#introCarousel" data-mdb-slide-to="0" class="active"></li>
          <li data-mdb-target="#introCarousel" data-mdb-slide-to="1"></li>
          <li data-mdb-target="#introCarousel" data-mdb-slide-to="2"></li>
        </ol>
  
        <!-- Inner -->
        <div class="carousel-inner">
          <!-- Single item -->
            <div class="carousel-item active">
                <div class="mask" style="background-color: rgba(0, 0, 0, 0.3);">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white text-center">
                    <h2><strong>เข้าร่วมการอบรมออกเเบบหุ่นยนต์</strong></h2>
                    <p>ชั้น : ปวช.1</p>
                    </div>
                </div>
                </div>
            </div>
  
            <!-- Single item -->
            <div class="carousel-item">
                <div class="mask" style="background-color: rgba(0, 0, 0, 0.3);">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white text-center">
                    <h2><strong>เข้าร่วมการอบรมการดูเเลรักษาคอมพิวเตอร์ด้วยตัวเอง</strong></h2>
                    <p>ชั้น : ปวช.1</p>
                    </div>
                </div>
                </div>
            </div>
  
            <!-- Single item -->
            <div class="carousel-item">
                <div class="mask" style="background-color: rgba(0, 0, 0, 0.3);">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white text-center">
                    <h2><strong>เข้าร่วมการเเข่งขันตอบคำถามวิชาการ</strong></h2>
                    <p>ชั้น : ปวช.1</p>
                    </div>
                </div>
                </div>
            </div>

        </div>
        <!-- Inner -->
  
        <!-- Controls -->
        <a class="carousel-control-prev" href="#introCarousel" role="button" data-mdb-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#introCarousel" role="button" data-mdb-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
    <!----------------------------------------- Slide Image ---------------------------------------------------->
    <!----------------------------------------- Main content ---------------------------------------------------->
    <div class="container">
        <hr class="my-5" />
        <section class="text-center">
            <h4 class="mb-5"><strong><i class="fa-solid fa-briefcase"></i> กิจกรรม <i class="fa-solid fa-briefcase"></i></strong></h4>
            <div class="row">

                <!-- Loop รา้ง Element ทั้งหมดตามที ส่งมา -->
                <% for(let i = 0; i < data.activity.length; i++){ %>

                    <div class="col-lg-4 col-md-12 mb-4">
                        <div class="card">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                            <img
                            src="<%= data.activity[i].img %>"
                            class="img-fluid"
                            />
                            <a href="#!">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </a>
                        </div>
                        <div class="card-body">
                            <!-- Loop สร้าง เเต่ล่ำบรรทัด Title -->
                            <% for(let ii = 0; ii < data.activity[i].title.length; ii++){ %>
                                <h5 class="card-title m-1"><%= data.activity[i].title[ii] %></h5>
                            <% } %>
                            <!-- Loop สร้าง เเต่ล่ำบรรทัด description -->
                            <% for(let ii = 0; ii < data.activity[i].description.length; ii++){ %>
                                <p class="card-text m-1"><%= data.activity[i].description[ii] %></p>
                            <% } %>
                        </div>
                        </div>
                    </div>
                
                <% } %>

            </div>
        </section>
    </div>
</main>