<!-- footer visitor counter -->
<script>
  let counterElement = document.getElementById("visitor-counter");
  axios.get('/api/visitor-count/check').then(response =>{
    if(response.data.status == "SUCCESS"){
      UpdateCounter(parseInt(response.data.data.count));
      console.log(`[Debug] Get count data success : ${response.data.data.count}`);
    }
    else {
      console.log(`[Fail] Can't get visitor count ERROR: ${response.data.error}`);
      counterElement.innerHTML = "null"
    }
    
  }).catch(err =>{
    console.log(`[Fail] Can't get visitor count ERROR: ${err}`);
    counterElement.innerHTML = "null";
  });

  function sleep(ms) {
    return new Promise(resolve => setTimeout(resolve, ms));
  }
  async function UpdateCounter(value){
    for(let i = 1; i <= value; i++){
      counterElement.innerHTML = i;
      await sleep(10);
    }
  }
</script>

