<script>
    setTimeout(function(){
        let profileImageElement = document.getElementById("profile_img");
        
        const profileImageConfig = {
            animation: [
                {
                    in: "animate__rollIn",
                    out: "animate__rollOut",
                },
                {
                    in: "animate__bounceInDown",
                    out: "animate__bounceOutDown",
                },
                {
                    in: "animate__backInDown",
                    out: "animate__backOutDown",
                },
                {
                    in: "animate__backInLeft",
                    out: "animate__backOutRight",
                },
                {
                    in: "animate__flipInX",
                    out: "animate__flipOutX",
                }, 
                {
                    in: "animate__zoomInDown",
                    out: "animate__zoomOutDown",
                }
            ],
        }

        let randomProfileImageAnimation = Math.floor(Math.random() * (profileImageConfig.animation.length));

        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }
        function AnimateOut(num){
            let classArray = (profileImageElement.classList.value).trim().split(/ +/g);
            if(classArray.includes(profileImageConfig.animation[num].in)){
                profileImageElement.classList.remove(profileImageConfig.animation[num].in);
            }
            profileImageElement.classList.add(profileImageConfig.animation[num].out);
        }
        function AnimateIn(num){
            let classArray = (profileImageElement.classList.value).trim().split(/ +/g);
            if(classArray.includes(profileImageConfig.animation[num].out)){
                profileImageElement.classList.remove(profileImageConfig.animation[num].out);
            }
            profileImageElement.classList.add(profileImageConfig.animation[num].in);
        }
        function ChangeAndRandomImage(){
            let imagesArray = [
                "assets/images/profile_images/najimi.jpg",
                "assets/images/profile_images/my_face_1.jpg",
                "assets/images/profile_images/my_face_2.jpg",
                "assets/images/profile_images/my_face_4.jpg",
                "assets/images/profile_images/my_face_5.jpg",
                "assets/images/profile_images/my_face_6.jpg",
                "assets/images/profile_images/my_face_7.jpg",
                "assets/images/profile_images/my_face_8.jpg",
                "assets/images/profile_images/my_face_9.jpg",
                "assets/images/profile_images/my_face_10.jpg",
                "assets/images/profile_images/my_face_11.jpg",
            ];
            let random = Math.floor(Math.random() * (imagesArray.length));
            let selectImage = imagesArray[random];
            profileImageElement.src = selectImage;
            console.log(`[Debug] selectImage : ${selectImage}`);
        }
        async function Run(randomNum){
            for(let i = 0; i < Infinity; i++){
                AnimateOut(randomNum);
                await sleep(1000);
                ChangeAndRandomImage();
                await sleep(500);
                AnimateIn(randomNum);
                await sleep(2500);
            }
        }
        Run(randomProfileImageAnimation);
    }, 1 * 1000);

</script>




